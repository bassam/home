#!/bin/bash

function subl()
{
	if [ "`uname -s`" == "Darwin" ]; then
		/Applications/Sublime\ Text.app/Contents/SharedSupport/bin/subl $*
	else
	    local args
	    for a in "$@"; do
	        args="$args $(cygpath -w $a)"
	    done
	    ( nohup /cygdrive/c/Program\ Files/Sublime\ Text\ 3/sublime_text.exe $args >/dev/null 2>&1 </dev/null & )
	fi
}

subl $*